<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.databasegroup.dao.ICityDao">
	
	<resultMap id="cityResultMap" type="City">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="num" column="num" />
	</resultMap>
	
	<sql id="columns">id, name, num</sql>
	
	<select id="getById" parameterType="int"
		resultMap="cityResultMap">
		SELECT
		<include refid="columns"></include>
		FROM bk_city WHERE id=#{id}
	</select>
	
	<select id="getAll"
		resultMap="cityResultMap">
		SELECT
		<include refid="columns"></include>
		FROM bk_city
	</select>
	
	<select id="getCityByCityNum" parameterType="String"
		resultMap="cityResultMap">
		SELECT
		<include refid="columns"></include>
		FROM bk_city
		WHERE num=#{num}
	</select>
	
	<insert id="insert" parameterType="City"
		flushCache="true">
		INSERT INTO bk_city (name, num) VALUES
		(#{name},#{num})
	</insert>
	
	<update id="update" parameterType="City">
		UPDATE bk_city SET
		name=#{name},
		num=#{num}
		WHERE id=#{id}
	</update>
	
	<delete id="delete" parameterType="City">
		DELETE
		FROM bk_city
		WHERE id=#{id}
	</delete> 

	<select id="getLimitCities" resultMap="cityResultMap">
		SELECT *
		FROM bk_city
		ORDER BY id
		LIMIT #{start},#{num}
	</select>
</mapper>