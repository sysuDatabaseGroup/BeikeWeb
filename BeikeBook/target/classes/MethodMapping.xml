<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.databasegroup.dao.IMethodDao">
	
	<sql id="columns">methodID, methodName, price</sql>
	
	<select id="getById" parameterType="int"
		resultType="Method">
		SELECT
		<include refid="columns"></include>
		FROM bk_method WHERE methodID=#{id}
	</select>
	
	<select id="getAll"
		resultType="Method">
		SELECT
		<include refid="columns"></include>
		FROM bk_method
	</select>
	
	<insert id="insert" parameterType="Method"
		flushCache="true">
		INSERT INTO bk_method (methodName, price) VALUES
		(#{methodName},#{price})
	</insert>
	
	<update id="update" parameterType="Method">
		UPDATE bk_method SET
		methodName=#{methodName},
		price=#{price}
		WHERE methodID=#{methodID}
	</update>
	
	<delete id="delete" parameterType="Method">
		DELETE
		FROM bk_method
		WHERE methodID=#{methodID}
	</delete> 
</mapper>