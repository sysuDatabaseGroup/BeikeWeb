<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.databasegroup.dao.ICityDao">
	
	<sql id="columns">cityID, cityName, cityNum</sql>
	
	<select id="getById" parameterType="int"
		resultType="City">
		SELECT
		<include refid="columns"></include>
		FROM bk_city WHERE cityID=#{id}
	</select>
	
	<select id="getAll"
		resultType="City">
		SELECT
		<include refid="columns"></include>
		FROM bk_city
	</select>
	
	<select id="getCityByCityNum" parameterType="String"
		resultType="City">
		SELECT
		<include refid="columns"></include>
		FROM bk_city
		WHERE cityNum=#{cityNum}
	</select>
	
	<insert id="insert" parameterType="City"
		flushCache="true">
		INSERT INTO bk_city (cityName, cityNum) VALUES
		(#{cityName},#{cityNum})
	</insert>
	
	<update id="update" parameterType="City">
		UPDATE bk_city SET
		cityName=#{cityName},
		cityNum=#{cityNum}
		WHERE cityID=#{cityID}
	</update>
	
	<delete id="delete" parameterType="City">
		DELETE
		FROM bk_city
		WHERE cityID=#{cityID}
	</delete> 
</mapper>