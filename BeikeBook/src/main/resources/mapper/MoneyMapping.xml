<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.databasegroup.dao.IMoneyDao">
	
	<sql id="columns">moneyID, alipayAccount, alipayName,
		moneyNum, phone</sql>
	
	<select id="getById" parameterType="int"
		resultType="Money">
		SELECT
		<include refid="columns"></include>
		FROM bk_money WHERE moneyID=#{id}
	</select>
	
	<select id="getAll"
		resultType="Money">
		SELECT
		<include refid="columns"></include>
		FROM bk_money
	</select>
	
	<insert id="insert" parameterType="Money"
		flushCache="true">
		INSERT INTO bk_money (alipayAccount, alipayName,
			moneyNum, phone) VALUES
		(#{alipayAccount},#{alipayName},#{moneyNum},#{phone})
	</insert>
	
	<update id="update" parameterType="Money">
		UPDATE bk_money SET
		alipayAccount=#{alipayAccount},
		alipayName=#{alipayName},
		moneyNum=#{moneyNum},
		phone=#{phone}
		WHERE moneyID=#{moneyID}
	</update>
	
	<delete id="delete" parameterType="Money">
		DELETE
		FROM bk_money
		WHERE moneyID=#{moneyID}
	</delete> 
</mapper>